{% extends "layout/admin.twig" %}


{% block main %}
	<div class="admin__container">
		<table>
			<caption>{{title}}</caption>
			<thead>
				<tr>
					{% for heading in headings %}
						<th>{{heading}}</th>
					{% endfor %}
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for item in datas %}
					<tr>
						{% for data in item %}
							<td>{{data | raw}}</td>
						{% endfor %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="page-bottom">
			<div class="btn__container">
				<a class="btn" href="/admin/{{entity}}/ajouter">{{linkText}}</a>
			</div>
			{% if nbPages > 1 %}
				<div class="pagination">
					{% for nbPage in 1..nbPages %}
						<a class="{{nbPage == page or (page == null and nbPage == 1) ? "active" : ""}}" href="/admin/{{entity}}?page={{nbPage}}">{{nbPage}}</a>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
