{% extends "layout/main.twig" %}

{% block head %}
	<link rel="stylesheet" href="/public/assets/scss/signature.css">
	<script src="/public/assets/js/signature.js" defer></script>
{% endblock %}

{% block main %}
	<div class="container">
		<canvas width="600" height="300" id="canvas"></canvas>
		<form id="signature-form" enctype='multipart/form-data'>
			<button id="reset" type="reset">Effacer</button>
			<button id="save" type="button">Enregistrer</button>
			<button type="submit">Envoyer</button>
		</form>
	</div>
{% endblock %}
